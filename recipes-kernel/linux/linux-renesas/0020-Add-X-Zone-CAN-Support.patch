From: Fang Jiawei <fangjiawei1007@gmail.com>
Date: Fri, 8 Jan 2021 03:32:30 +0000
Subject: [PATCH] Add X-Zone CAN Support.

---
 arch/arm64/boot/dts/renesas/x-zone-common.dtsi | 34 ++++++++++++++++++++++++--
 1 file changed, 32 insertions(+), 2 deletions(-)

diff --git a/arch/arm64/boot/dts/renesas/x-zone-common.dtsi b/arch/arm64/boot/dts/renesas/x-zone-common.dtsi
index c8ca275..a8212a4 100644
--- a/arch/arm64/boot/dts/renesas/x-zone-common.dtsi
+++ b/arch/arm64/boot/dts/renesas/x-zone-common.dtsi
@@ -737,7 +737,7 @@
 	};
 
 /*	Remove SD Card from X-Zone by FJW, and GPIO does not care about the pfc.	*/
-
+/*
 	sdhi0_pins: sd0 {
 		groups = "sdhi0_data4", "sdhi0_ctrl";
 		function = "sdhi0";
@@ -749,7 +749,7 @@
 		function = "sdhi0";
 		power-source = <1800>;
 	};
-
+*/
 	sdhi2_pins: sd2 {
 		groups = "sdhi2_data8", "sdhi2_ctrl", "sdhi2_ds";
 		function = "sdhi2";
@@ -761,6 +761,7 @@
 		function = "sdhi2";
 		power-source = <1800>;
 	};
+
 /*	Remove SD Card from X-Zone by FJW, and GPIO does not care about the pfc.	*/
 
 	sdhi3_pins: sd3 {
@@ -815,6 +816,17 @@
 		groups = "usb30";
 		function = "usb30";
 	};
+
+	can0_pins: can0_data_a{
+		groups = "can0_data_a";
+		function = "can0";
+	};
+	
+	can1_pins: can1_data{
+		groups = "can1_data";
+		function = "can1";
+	};
+
 };
 /*
 &pwm1 {
@@ -1052,3 +1064,21 @@
 
 	status = "okay";
 };
+
+&can0 {
+	pinctrl-0 = <&can0_pins>;
+	pinctrl-names = "default";
+
+	status = "okay";
+};
+
+&can1 {
+	pinctrl-0 = <&can1_pins>;
+	pinctrl-names = "default";
+	
+	status = "okay";
+};
+
+
